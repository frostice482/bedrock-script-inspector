{
    "compilerOptions": {
        "lib": ["esnext"],
        "target": "esnext",

        "rootDir": "src",
        "module": "commonjs",
        "moduleResolution": "node",
        "paths": {
            "@globaltypes/*": ["../globaltypes/*"]
        },

        "outDir": "app",
        "removeComments": true,
        "allowJs": true,

        "strict": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "skipLibCheck": true
    },
    "include": ["src", "../globaltypes"]
}
