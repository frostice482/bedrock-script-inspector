{
    "compilerOptions": {
        "lib": ["esnext", "dom"],
        "target": "esnext",

        "rootDir": "src",
        "module": "esnext",
        "moduleResolution": "node",
        "paths": {
            "@globaltypes/*": ["../globaltypes/*"]
        },

        "outDir": "scripts",
        "removeComments": true,
        "allowJs": true,

        "strict": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true,
        "skipLibCheck": true
    },
    "include": ["src", "../globaltypes"],
    "exclude": ["scripts", "node_modules"]
}
