{
    "compilerOptions": {
        "lib": [
            "ES2020"
        ],
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "rootDir": "src",
        "baseUrl": "src",
        "outDir": "scripts",
        "removeComments": true,
        "allowJs": true,
        "strict": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true
    },
    "include": [
        "src",
        "../globaltypes"
    ]
}