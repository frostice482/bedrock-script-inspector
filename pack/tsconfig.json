{
    "compilerOptions": {
        "lib": [ "ES2020" ],
        "target": "ES2022",

        "rootDir": "src",
        "baseUrl": "src",
        "module": "ES2022",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "paths": {
            "@globaltypes/*": ["../../globaltypes/*"]
        },

        "outDir": "scripts",
        "removeComments": true,
        "allowJs": true,

        "strict": true,
        "noImplicitThis": true,
        "noUncheckedIndexedAccess": true,
        "noUnusedLocals": true
    },
    "include": [ "src", "../globaltypes" ]
}